<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<ToolBar stylesheets="@../css/visuaLigueCSS.css" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.glo.giftw.view.DefaultToolBarController">
   <items>
      <MenuButton contentDisplay="TOP" mnemonicParsing="false" text="Nouveau">
         <items>
            <MenuItem mnemonicParsing="false" onAction="#onActionNewStrategy" text="Stratégie" />
            <MenuItem mnemonicParsing="false" onAction="#onActionNewSport" text="Sport" />
            <MenuItem mnemonicParsing="false" onAction="#onActionNewObstacle" text="Obstacle" />
         </items>
         <graphic>
            <ImageView pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/add-new-document.png" />
               </image>
            </ImageView>
         </graphic>
      </MenuButton>
      <MenuButton contentDisplay="TOP" mnemonicParsing="false" text="Ouvrir">
         <items>
            <MenuItem mnemonicParsing="false" onAction="#onActionOpenStrategy" text="Stratégie" />
            <MenuItem mnemonicParsing="false" onAction="#onActionOpenSport" text="Sport" />
            <MenuItem mnemonicParsing="false" onAction="#onActionOpenObstacle" text="Obstacle" />
         </items>
         <graphic>
            <ImageView pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/open-folder-outline.png" />
               </image>
            </ImageView>
         </graphic>
      </MenuButton>
      <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#onActionSave" text="Sauver">
         <graphic>
            <ImageView pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/save.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Separator orientation="VERTICAL">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding></Separator>
   </items>
</ToolBar>
