<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="300.0" prefWidth="600.0" styleClass="light-gray-background" stylesheets="@../css/visuaLigueCSS.css" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.glo.giftw.view.CreationGUIController">
   <left>
      <Accordion styleClass="dark-gray-background" BorderPane.alignment="CENTER">
        <panes>
          <TitledPane animated="false" prefHeight="168.0" prefWidth="161.0" styleClass="text" text="Joueurs">
               <content>
                  <ListView fx:id="playersListView" prefHeight="200.0" prefWidth="200.0" />
               </content>
          </TitledPane>
          <TitledPane animated="false" prefHeight="161.0" prefWidth="149.0" text="Obstacles">
               <content>
                  <ListView fx:id="ObstaclesListView" prefHeight="200.0" prefWidth="200.0" styleClass="dark-gray-background" />
               </content>
          </TitledPane>
          <TitledPane animated="false" text="Projectiles">
               <content>
                  <ListView fx:id="projectilesListView" prefHeight="200.0" prefWidth="200.0" styleClass="dark-gray-background" />
               </content>
          </TitledPane>
        </panes>
      </Accordion>
   </left>
   <center>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" styleClass="light-gray-background" BorderPane.alignment="CENTER" />
   </center>
   <bottom>
      <HBox alignment="TOP_RIGHT" spacing="10.0" styleClass="dark-gray-background" BorderPane.alignment="CENTER">
         <children>
            <Label text="X: 0m" />
            <Label text="Y: 0m" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <BorderPane.margin>
            <Insets top="1.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
   <top>
      <HBox styleClass="dark-gray-background" BorderPane.alignment="CENTER">
         <children>
            <Region HBox.hgrow="ALWAYS" />
            <VBox alignment="CENTER" onMouseClicked="#mouseClickedNext" styleClass="on-mouse-over">
               <children>
                  <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/next.png" />
                     </image>
                  </ImageView>
                  <Label alignment="CENTER" text="Suivant" />
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <VBox alignment="CENTER" layoutX="10.0" layoutY="10.0" onMouseClicked="#mouseClickedPrevious" styleClass="on-mouse-over">
               <children>
                  <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/back.png" />
                     </image>
                  </ImageView>
                  <Label alignment="CENTER" text="Précédent" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <VBox alignment="CENTER" layoutX="69.0" layoutY="10.0" onMouseClicked="#mouseClickedDelete" styleClass="on-mouse-over">
               <children>
                  <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/garbage.png" />
                     </image>
                  </ImageView>
                  <Label alignment="CENTER" text="Supprimer" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <VBox alignment="CENTER" layoutX="128.0" layoutY="10.0" onMouseClicked="#mouseClickedZoomIn" styleClass="on-mouse-over">
               <children>
                  <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/zoom-in.png" />
                     </image>
                  </ImageView>
                  <Label alignment="CENTER" text="Zoom+" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <VBox alignment="CENTER" layoutX="187.0" layoutY="10.0" onMouseClicked="#mouseClickedZoomOut" styleClass="on-mouse-over">
               <children>
                  <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/zoom-out.png" />
                     </image>
                  </ImageView>
                  <Label alignment="CENTER" text="Zoom-" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <VBox alignment="CENTER" layoutX="246.0" layoutY="10.0" onMouseClicked="#mouseClickedUndo" styleClass="on-mouse-over">
               <children>
                  <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/back-arrow.png" />
                     </image>
                  </ImageView>
                  <Label alignment="CENTER" text="Annuler" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <VBox alignment="CENTER" layoutX="305.0" layoutY="10.0" onMouseClicked="#mouseClickedRedo" styleClass="on-mouse-over">
               <children>
                  <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/next-1.png" />
                     </image>
                  </ImageView>
                  <Label alignment="CENTER" text="Rétablir" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
         </children>
         <BorderPane.margin>
            <Insets bottom="1.0" />
         </BorderPane.margin>
      </HBox>
   </top>
</BorderPane>
