            <Label layoutX="522.0" layoutY="10.0" text="px" />

            </children>
        </Pane>
    </content>
    <buttonTypes>
        <ButtonType fx:constant="CANCEL" />
        <ButtonType fx:constant="FINISH" />
    </buttonTypes>
</DialogPane>
