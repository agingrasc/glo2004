<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<Accordion fx:id="rootAccordion" stylesheets="@../css/visuaLigueCSS.css" xmlns="http://javafx.com/javafx/8.0.60"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.glo.giftw.view.GeneralPropertiesPaneController">
    <panes>
        <TitledPane fx:id="generalPropertiesTitledPane" animated="false" stylesheets="@../css/visuaLigueCSS.css"
                    text="Propriétés générales:">
            <content>
                <VBox>
                    <children>
                        <GridPane>
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0"
                                                   prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <CheckBox fx:id="showRolesCheckBox" mnemonicParsing="false" onAction="#onShowRoles"
                                          text="Afficher les rôles" GridPane.columnSpan="2147483647"/>
                                <CheckBox fx:id="showNamesCheckBox" mnemonicParsing="false" onAction="#onShowNames"
                                          text="Afficher les noms" GridPane.columnSpan="2147483647"
                                          GridPane.rowIndex="1"/>
                                <Button fx:id="addTeamButton" mnemonicParsing="false" onAction="#onActionAddTeam"
                                        text="Ajouter" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                                <ColorPicker fx:id="colorPicker" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                                <Label text="Équipes:" GridPane.columnSpan="2147483647" GridPane.halignment="CENTER"
                                       GridPane.rowIndex="3"/>
                                <Separator prefWidth="200.0" GridPane.columnSpan="2147483647" GridPane.rowIndex="2"/>
                                <Label text="Couleur:" GridPane.rowIndex="4"/>
                                <Label text="Nom:" GridPane.rowIndex="5"/>
                                <TextField fx:id="teamNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                            </children>
                        </GridPane>
                    </children>
                </VBox>
            </content>
        </TitledPane>
    </panes>
</Accordion>
